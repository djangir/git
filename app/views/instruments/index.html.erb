<% content_for :header do %>
<h2 class="text-center">Instruments</h2>

<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>name</th>
      <th>Image</th>
      <th>Brand</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Finish</th>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.user.name %></td>
        <td><%= image_tag(instrument.image_url, alt:"#{instrument.title}", width:"250") %></td>
        <td><%= instrument.brand %></td>
        <td><%= instrument.description %></td>
        <td><%= instrument.condition %></td>
        <td><%= instrument.finish %></td>
        <td><%= instrument.title %></td>
        <td><%= instrument.price %></td>
        <td><%= link_to 'Show', instrument %></td>
        
        <% if user_signed_in? && current_user.id == instrument.user.id %>

        <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>
        <% if user_signed_in? %>
        <td> <%= button_to 'Add to cart', cart_items_path(instrument_id: instrument.id ) %></td> 
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%end%>

