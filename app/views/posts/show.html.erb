<h2 class="text-center my-3">comments</h2>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @post.comments.each do |comment| %>
  <% if comment.persisted? %>

    <tr>
      <td><%= comment.title %></td>
      <td><%= comment.comment %></td>
      <td><%= link_to 'Show', [comment.post, comment] %></td>
      <td><%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %></td>
      <td><%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% end %>
</table>

