<h2 class="text-center my-2"> All Microposts </h2>

<div class="w-100 p-2">
  <table class="table table-success table-striped table-hover text-center">
    <thead>
      <tr>
        <th>Content</th>
        <th>User</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.content %></td>
          <td><%= micropost.user_id %></td>
          <td><%= link_to 'Show', micropost, class:"btn" %></td>
          <td><%= link_to 'Edit', edit_micropost_path(micropost), class:"btn" %></td>
          <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="text-center">
  <%= link_to 'New Micropost', new_micropost_path, class:"btn btn-outline-success m-auto" %>
</div>

<% provide(:title, "All Micropost") %>